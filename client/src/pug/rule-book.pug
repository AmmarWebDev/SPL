doctype html
html(lang="en")
  head
    include meta-data/_head.pug
    title SPL | Rule Book
  body(data-bs-theme="dark")
    //- NAVBAR -//
    include components/_navbar.pug

    //- RULES -//
    section#rules-section.container.mt-5
      h1.text-center SPL Rule Book for matches and refs
      ol#rules-wrapper.list-group.list-group-flush
        //- will be populated with js
      nav
        ul.pagination.justify-content-center
          //- will be populated with js

    //- axios
    script(src="https://cdn.jsdelivr.net/npm/axios@1.6.8/dist/axios.min.js")
    //- main js file
    script(src="assets/js/main.min.js", type="module")
    //- our custom JS
    script(src="assets/js/rule-book.min.js", type="module")